{
    "name": "vue-directive-kit",
    "description": "A collection of vue directives.",
    "version": "1.0.0",
    "author": "slevin <575720013@qq.com>",
    "license": "MIT",
    "private": false,
    "keywords": [
        "vue",
        "vue-directive-kit",
        "vue-directive",
        "vue-infinite-scroll",
        "vue-img-lazyload",
        "vue-img-placeholder"
    ],
    "files": [
        "dist/vue-directive-kit.js",
        "package.json",
        "README.md",
        "yarn.lock"
    ],
    "main": "dist/vue-directive-kit.js",
    "repository": {
        "type": "git",
        "url": ""
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=development webpack-dev-server --env --open --hot",
        "build": "cross-env NODE_ENV=production webpack --env --progress --hide-modules",
        "lib": "cross-env NODE_ENV=production webpack --env.lib --progress --hide-modules",
        "lint:all": "eslint --ext .js,.vue '**'",
        "lint:fix": "eslint --fix --ext .js,.vue '**'"
    },
    "dependencies": {
        "vue": "^2.5.11"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "echo '22'"
        }
    },
    "lint-staged": {
        "/*.{js,vue}": [
            "echo 'lint-staged====>'",
            "eslint --fix",
            "git add"
        ]
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ],
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-eslint": "^10.0.3",
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.6.0",
        "babel-preset-stage-3": "^6.24.1",
        "cross-env": "^5.0.5",
        "css-loader": "^0.28.7",
        "eslint": "^6.3.0",
        "eslint-loader": "^3.0.0",
        "eslint-plugin-vue": "^5.2.3",
        "file-loader": "^1.1.4",
        "husky": "^3.0.5",
        "lint-staged": "^9.2.5",
        "node-sass": "^4.5.3",
        "sass-loader": "^6.0.6",
        "vue-loader": "^13.0.5",
        "vue-template-compiler": "^2.4.4",
        "webpack": "^3.6.0",
        "webpack-dev-server": "^2.9.1"
    }
}
